<h2 class="small-h2">My Orders</h2>
<p>Here are the details for all of your previous orders.</p>

<table>
  <tr>
    <th>Order Number</th>
    <th>Date Placed</th>
    <th>Order Status</th>
    <th>Amount</th>
  </tr>
  <% @orders.each do |order| %>
    <% if order.date_placed != nil %>
        <tr>
          <td><%= link_to order.id, order_path(order)%></td>
          <td><%= order.date_placed.strftime('%a, %b %d, %G, %T %Z') %></td>
          <td><%= order.order_status.name %></td>
          <td><%= number_with_precision(order.total, precision: 2) %></td>
        </tr>
    <% end %>
  <% end %>
</table>


<script type="text/javascript">
  $('.open-popup-link').magnificPopup({
    type:'inline',
    midClick: true
  });
</script>
