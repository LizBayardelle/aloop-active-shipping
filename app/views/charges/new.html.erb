<h2 class="text-center">Checkout</h2>

<div class="product-row black-border-row row" style="margin-bottom: 60px">
  <div class="container">
    <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>
        <label class="amount">
          <span>Amount: $<%= number_with_precision( current_order.total, precision: 2 ) %></span>
        </label>
      </article>

      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="Aloop Order"
              data-amount=<%= current_order.total * 100 %>
              data-locale="auto"></script>
    <% end %>
  </div> <!-- page container -->
</div> <!-- product row -->

<script>
  $(document).ready(function(){
    $(".footer").removeClass("top-shadow-inset");
  });
</script>
