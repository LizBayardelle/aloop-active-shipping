<div class="hero-image-row">
  <div class="hero-image-outer text-center">
    <div class="hero-image-inner text-center">
      <%= image_tag "polaris_3.jpg", class: "hero-image", alt: "Asphalt road with clouds." %>
    </div> <!-- hero-image-inner -->
  </div> <!-- hero-image-inner -->
</div> <!-- row -->

<div class="overlap-hero-image">
  <div class="index-text row">
    <h2>Aloop Store</h2>
  </div> <!-- index text row -->
</div> <!-- overlap hero image -->

<div class="row text-center background-white bottom-shadow" style="padding-bottom: 25px; margin-bottom: 50px">
  <div class="row">
    <div class="container">
      <h2>Aloop Kits</h2>

      <div class="col-sm-4 inner-15">
        <div class="black-box hover store-featured">
          <div class="image-box">
            <%= image_tag "kit_1_1.jpg", alt: "Aloop 4SMX Seat/Tank Kit for XR250 and XR400" %>
          </div> <!-- image box -->
          <div class="text-box">
            <h3>4SMX Kit for XR250/XR400</h3>
            <p>The most popular XR400 performance modification in the world!</p>
            <%= form_for @order_item, remote: true do |f| %>
    						<%= f.hidden_field :quantity, value: 1 %>
    						<%= f.hidden_field :product_id, value: 1 %>
    						<%= f.submit "Add to Cart", class: "btn cta btn1", style: "margin-top: 0px" %><span class="hidden addedToCart1" style="color: green; font-weight: bold; margin-left: 20px">Added to Cart</span>
    				<% end %>
          </div> <!-- text-box -->
        </div> <!-- black box -->
      </div> <!-- column -->

      <div class="col-sm-4 inner-15">
        <div class="black-box hover store-featured">
          <div class="image-box">
            <%= image_tag "kit_2_1.jpg", alt: "Aloop 4SMX Seat/Tank Kit for XR600" %>
          </div> <!-- image box -->
          <div class="text-box">
            <h3>4SMX Kit for XR600</h3>
            <p>The most popular XR400 performance modification in the world!</p>
            <%= form_for @order_item, remote: true do |f| %>
    						<%= f.hidden_field :quantity, value: 1 %>
    						<%= f.hidden_field :product_id, value: 2 %>
    						<%= f.submit "Add to Cart", class: "btn cta btn2", style: "margin-top: 0px" %><span class="hidden addedToCart2" style="color: green; font-weight: bold; margin-left: 20px">Added to Cart</span>
    				<% end %>
          </div> <!-- text-box -->
        </div> <!-- black box -->
      </div> <!-- column -->

      <div class="col-sm-4 inner-15">
        <div class="black-box hover store-featured">
          <div class="image-box">
            <%= image_tag "kit_3_1.jpg", alt: "Aloop 4SMX Seat/Tank Kit for XR650L" %>
          </div> <!-- image box -->
          <div class="text-box">
            <h3>4SMX Kit for XR650L</h3>
            <p>The most popular XR400 performance modification in the world!</p>
            <%= form_for @order_item, remote: true do |f| %>
    						<%= f.hidden_field :quantity, value: 1 %>
    						<%= f.hidden_field :product_id, value: 3 %>
    						<%= f.submit "Add to Cart", class: "btn cta btn3", style: "margin-top: 0px" %><span class="hidden addedToCart3" style="color: green; font-weight: bold; margin-left: 20px">Added to Cart</span>
    				<% end %>
          </div> <!-- text-box -->
        </div> <!-- black box -->
      </div> <!-- column -->

    </div> <!-- container -->
  </div> <!-- black box row -->
</div>

<div class="header-row row text-center">
  <div class="col-xs-10 col-xs-push-1 blue-box">
    <div class="text-right">
      <% if current_user && current_user.admin %>
        <%= link_to 'New Product', new_product_path, style: "padding: 15px" %>
      <% end %>
    </div> <!-- right nav -->

    <div class="row">
      <h2>Aloop Products</h2>
      <h3>Along with our game-changing 4SMX kits, we now carry other plastic parts to help convert your XR into a genuine 4SMX weapon.</h3>
      <h3><strong>Click on a tag below to sort through our products or browse the entire catalogue below.</strong></h3>

      <div class="row">
        <div id="tag_cloud" class="col-sm-6 col-sm-push-3" style="margin-top: 20px">
          <% tag_cloud Product.tag_counts, %w{s m l} do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
        </div> <!-- tag cloud -->
      </div> <!-- tag cloud row -->
    </div> <!-- row -->

    <div class="row">
      <hr class="col-xs-push-2 col-xs-8" />
    </div> <!-- row -->

    <div class="row">
      <% @products.each do |product| %>
        <%= render "product_row", product: product, order_item: @order_item %>
      <% end %> <!-- each ends -->
    </div> <!-- row -->

    <div class="row text-center">
      <h4>Can't find what you're looking for?  <%= link_to "Contact us", new_contact_path %> and we'll help you find it!</h4>
    </div>

  </div> <!-- column -->
</div> <!-- header row -->

<script type="text/javascript">
  $(document).ready(function(){
    $(".footer").removeClass("top-shadow-inset");
    $(".btn1").click(function(){
      $(".addedToCart1").removeClass("hidden");
    });
    $(".btn2").click(function(){
      $(".addedToCart2").removeClass("hidden");
    });
    $(".btn3").click(function(){
      $(".addedToCart3").removeClass("hidden");
    });
  });
</script>
