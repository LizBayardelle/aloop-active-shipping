<div class="row center-mobile">
    <%= form_for order_item, remote: true do |f| %>
    <div class="col-sm-3 text-center">
      <%= image_tag product.image.url, alt: product.name, style: "padding: 20px; max-width: 100%" %>
      <p><%= product.aloop_number %><% if product.size != "" %>, <%= product.size %><% end %></p>
    </div> <!-- col -->

    <div class="col-sm-9">
      <h1><%= link_to product do %><%= product.name %><% end %></h1>
      <p><strong><%= product.tag_line %></strong></p>
      <p>Price per Item: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></p>
      <div class="row"><div class="col-xs-2 col-xs-push-5 col-sm-push-0">
        <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
        <%= f.hidden_field :product_id, value: product.id %>
      </div> <!-- inner col/row --></div>
      <p><%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "linkish" } %> |<%= f.submit "Update Quantity", class: "linkish", style: "background-color: white; border: none" %></p>
      <h4 class="text-right"><strong>Total Price: <span style="color: green"><%= number_to_currency order_item.total_price %></span></strong></h4>
    </div> <!-- col -->
  <% end %>
</div> <!-- row -->

<div class="row">
  <hr class="col-xs-8 col-xs-push-2" style="border-color: black" />
</div> <!-- row hr -->
